@{
    Layout = null;
}

<div class="modal-body" id="forgot-password-content" style="max-width: 300px; margin: 0 auto; text-align: left;">
    <form method="post" asp-action="ForgotPassword">
        <div class="form-group">
            <input type="email" name="Email" id="Email" class="form-control" required placeholder="Enter your email" style="width: 100%; padding: 5px; font-size: 12px;" />
        </div>
        <div class="form-group">
            <input type="submit" value="Send Code" class="btn btn-primary" style="font-size: 12px; padding: 5px 10px;" />
        </div>
    </form>
</div>
