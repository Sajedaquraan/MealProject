@{
    Layout = null;
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@{
    var ErrorMessage = TempData["ErrorMessage"] as string;
}


@{
    var ErrorMessage1 = TempData["errormessage"] as string;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Style CSS -->
    <link rel="stylesheet" href="~/auth.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


    <style>

        .fab.fa-google {
            font-size: 30px; /* Larger size for the Google icon */
            color: #db4437; /* Google brand color */
            transition: transform 0.2s; /* Smooth hover effect */
        }

            .fab.fa-google:hover {
                transform: scale(1.1); /* Slightly enlarge on hover */
            }

    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const params = new URLSearchParams(window.location.search);
            const error = params.get('error');

            if (error) {
                const errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-danger alert-dismissible fade show';
                errorDiv.role = 'alert';
                errorDiv.innerHTML = `
                      <strong>Error:</strong> ${decodeURIComponent(error)}
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    `;

                const formContainer = document.querySelector('.form-container');
                formContainer.insertBefore(errorDiv, formContainer.firstChild);
            }
        });
    </script>

    <style>
        #forgot-password-content input[type="email"] {
            width: 50%;
            padding: 5px;
            font-size: 12px;
        }

        #forgot-password-content input[type="submit"] {
            width: 50%;
            font-size: 12px;
            padding: 5px 10px;
        }

        .signin-content {
            position: relative; /* Ensure the container is positioned relative */
        }


     

        .custom-alert {
            max-width: 400px;
            text-align: center;
        }

        .alert-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

  


        .google-btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: black;
            background-color: #fff; /* Google blue */
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .google-btn:hover {
                background-color: #fff; /* Darker Google blue */
            }

            .google-btn i {
                margin-right: 8px;
            }
    </style>
</head>

<body>


@if (!string.IsNullOrEmpty(ErrorMessage1))
     {
        <div class="alert alert-danger custom-alert" role="alert">
             @ErrorMessage
        </div>
     }

    <div class="container-fluid">
        <div class="row">
            <!-- Background Image Column -->
            <div class="position-relative d-none d-md-block col-md-4 col-lg-6 p-0">
                <img src="~/loginn.PNG" alt="Background"
                     style="object-fit: cover; object-position: center;" class="w-100 full-h">
            </div>
            <!-- Login Form Column -->
            <div class="full-h d-flex justify-content-center align-items-center col-12 col-md-8 col-lg-6">
                <div class="col-10 col-md-8 col-xl-6 d-flex flex-column justify-content-center align-items-center font-weight-medium p-0">
                    <h2 class="main-color font-weight-bold">Welcome</h2>
                    <!-- Form Container -->
                    <div class="form-container">
                        <span class="blur-color mt-4 mb-4 font-weight-normal text-center">Log In into your existing account</span>
                        <hr class="separator mb-0 mt-1">
                        <!-- Form to submit login credentials -->
                        <form method="POST" class="w-100 mb-3 mt-3">
                            <div class="form-group mb-3">
                                <input type="email" name="email" placeholder="Enter Email" id="email"
                                       class="form-control pt-3 pb-3 pl-3 pr-0 input-auth" required>
                            </div>
                           @*  <div class="form-group mb-3">
                                <input type="password" name="password" placeholder="Password" id="password"
                                       class="form-control pt-3 pb-3 pl-3 pr-0 input-auth" required>
                            </div> *@

                            @if (!string.IsNullOrEmpty(successMessage))
                            {
                                <div class="alert alert-success custom-alert" role="alert">
                                    @successMessage
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(ErrorMessage))
                            {
                                <div class="alert alert-danger custom-alert" role="alert">
                                    @ErrorMessage
                                </div>
                            }
@* 
                            <div class="form-group">
                                <a href="javascript:void(0);" class="label-agree-term" data-toggle="modal" data-target="#forgotPasswordModal">
                                    <span><span></span></span>Forgot password
                                </a>
                            </div> *@

                            <button type="submit" class="login-btn submit w-100 pt-3 pb-3 font-weight-medium">
                                Log In
                            </button>
                        </form>

                        <div>
                            <a asp-controller="RegisterAndLogin" asp-action="Login1" style=" display: inline-block;
                                                                                    padding: 10px 20px;
                                                                                    font-size: 16px;
                                                                                    color: black;
                                                                                    background-color: #fff; /* Google blue */
                                                                                    border: 1px solid black;
                                                                                    text-decoration: none;
                                                                                    transition: background-color 0.3s;
                                                                                    width: 350px;
text-align:center;">
                                <i class="fab fa-google"></i> Sign in with Google
                            </a>
                        </div>

                        <br />
                        <!-- Sign Up Link -->
                        <div class="w-100 d-flex flex-column">
                            <div class="w-100 d-flex justify-content-center align-items-center">
                                <span class="blur-color">
                                    Don't have an account? <a href="@Url.Action("Register")" class="clicked text-decoration-none">Sign Up</a>
                                </span>
                            </div>
                        </div>

                        <!-- Google Sign-In Button -->
                        

                    </div>
                </div>
               
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot Password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="forgot-password-content">
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/RegisterAndLogin/js/main.js"></script>

    <script>
        // Load Forgot Password page into the modal
        $(document).on('click', '[data-toggle="modal"]', function () {
            $('#forgot-password-content').load('@Url.Action("ForgotPassword")');
        });
    </script>
</body>

</html>
