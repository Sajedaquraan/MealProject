@model IEnumerable<MealProject.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<br />
<br />
<br />
<br />

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Useremail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Userpassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Userimage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Googleid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registerdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Useremail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Userpassword)
            </td>
            <td>
               <img src="@Url.Content("~/Images/"+item.Userimage)" asp-append-version="true" width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Googleid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registerdate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Userid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Userid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Userid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
