@model IEnumerable<MealProject.Models.Userrecipe>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<br />
<br />
<br />
<br />
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Userlogin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Video)
            </td>
            <td>
                    <img src="@Url.Content("~/Images/"+item.Image)" asp-append-version="true" width="100" height="100" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Userlogin.Userloginid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Recipesid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Recipesid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Recipesid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
