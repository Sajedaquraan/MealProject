@model Tuple<Customer, IEnumerable<Likedrecipe>, IEnumerable<Userrecipe>>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .profile-container {
            display: flex;
            flex-direction: column;
            border-top: 1px solid #ddd;
            padding-top: 20px;
        }

        .form-container {
            flex: 1;
            padding-right: 20px;
            border-right: 1px solid #ddd;
            margin-bottom: 20px;
            margin-right: 40px;
        }

        .profile-pic {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .user-recipes, .liked-recipes {
            margin-bottom: 40px;
        }

        .user-recipes h1, .liked-recipes h2 {
            margin-bottom: 20px;
            font-size: 2em;
        }

        .recipe-card {
            width: 100%;
            max-width: 300px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .recipe-card h3 {
            margin-top: 10px;
            font-size: 1.5em;
        }

        .upload-form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }

        .upload-form input[type="file"],
        .upload-form input[type="submit"] {
            margin-bottom: 10px;
        }

        .action-links {
            text-align: center;
            margin-top: 40px;
        }

        .action-links a {
            display: block;
            margin-bottom: 10px;
            color: #007bff;
        }

        @@media (min-width: 768px) {
            .profile-container {
                flex-direction: row;
            }

            .form-container {
                width: 30%;
                padding-right: 40px;
            }

            .user-recipes, .liked-recipes {
                width: 70%;
            }
        }
    </style>
</head>
<body>
    <div class="container mb-5 mt-5">
        <div class="profile-container">
            <div class="form-container text-center">
                <img src="@Url.Content("~/Images/" + @ViewBag.UserImage)" class="profile-pic" alt="Profile Picture">
                <h3>@ViewBag.UserName</h3>
                <p>@ViewBag.UserEmail</p>

                <div class="action-links">
                    <a href="@Url.Action("Edit", new { id = ViewBag.UserId })"><h4>Edit Profile</h4></a>
                    <a href="@Url.Action("Logout", "Home")"><h4>Logout</h4></a>
                </div>
            </div>

            <!-- User Recipes -->
            <div class="user-recipes">
                <h1>Recipes you Create</h1>
                <div class="recipes-container">
                    @foreach (var item in Model.Item3)
                    {
                        <div class="recipe-card" data-recipe-id="@item.Recipesid">
                            <span class="close-btn" onclick="removeCard(this, 'user')">×</span>
                            <h3>@item.Title</h3>
                            <p>@item.Ingredients</p>
                            <a href="@item.Video" target="_blank">Watch Video</a>
                            <img src="@Url.Content("~/Images/"+item.Image)" alt="Recipe Image">
                            <p>Added on: @item.CreatedAt</p>
                        </div>
                    }
                </div>
            </div>


            <!-- Liked Recipes -->
            <div class="liked-recipes">
                <h2>Liked Recipes</h2>
                <div class="recipes-container">
                    @foreach (var item in Model.Item2)
                    {
                        var cleanedRecipeData = item.Recipedata.Replace("\"", "");

                        <div class="recipe-card" data-recipe-id="@item.Likedid">
                            <span class="close-btn" onclick="removeCard(this, 'liked')">×</span>
                            <h3>@item.Recipelabel</h3>
                            <a href="@cleanedRecipeData" target="_blank">View Recipe</a>
                            <img src="@Url.Content(item.Recipeimage)" alt="Recipe Image">
                            <p>Added on: @item.Createdat</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


        <script>
            function removeCard(element, type) {
                var recipeCard = element.closest('.recipe-card'); // Find the closest recipe card
                var recipeId = recipeCard.getAttribute('data-recipe-id'); // Get the recipe ID from the data attribute

                // Confirm deletion
                if (confirm("Are you sure you want to delete this recipe?")) {
                    // Send AJAX request to the server to delete the recipe
                    $.ajax({
                        url: '@Url.Action("DeleteRecipe", "Home")', // Ensure this is correct
                        type: 'POST',
                        data: {
                            id: recipeId,
                            type: type // Pass the type of recipe (user or liked)
                        },
                        success: function (response) {
                            console.log(response); // Log the response for debugging
                            // Check if the server responded with success
                            if (response.success === true) {
                                recipeCard.remove(); // Remove the recipe card from the page
                                alert("Recipe deleted successfully.");
                            } else {
                                alert("Failed to delete the recipe: " + response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            // Log error details for debugging
                            console.error("Error details:", status, error);
                            alert("An error occurred while trying to delete the recipe.");
                        }
                    });
                }
            }
        </script>
</body>
</html>
